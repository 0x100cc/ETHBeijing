---
import '../styles/hero.css';
---

<div class="hero-wrap mt-16 mb-28 flex flex-col justify-center items-center bg-white relative isolate mx-auto bg-no-repeat bg-cover bg-top" style="background-image: url(/images/banner.jpeg)">
  <div id="hero" class="anchor"></div>
  <div class="container w-5/12 pt-16 pb-16">
    <!-- content -->
    <img src="/images/eth-title.png" alt="" class="sm:w-[414px] w-full sm:mb-6 sm:mt-[26px] m-auto block inset-0 -z-10 h-full sm:h-[150px] sm:object-cover object-contain object-right md:object-center">
    <a href="#" class="hero-apply__btn w-[166px] h-[48px] leading-[48px] mt-[40px] mb-[40px] sm:mb-[26px] text-center block m-auto">Apply to hack</a>
    <div class="hero-time flex w-auto flex-wrap sm:flex-nowrap sm:justify-between justify-center sm:-ml-[70px] sm:items-baseline">
      <img src="/images/reg-time.png" alt="" class="sm:w-[300px] sm:h-[90px] sm:mr-[16px] inset-0 -z-10 h-full w-full object-cover object-right sm:object-center">
      <img src="/images/hack-time.png" alt="" class="sm:w-[300px] sm:h-[90px] inset-0 -z-10 h-full w-full mt-4 object-cover object-right sm:object-center">
    </div>
  </div>
</div>